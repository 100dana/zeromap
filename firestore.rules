rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 장소 제보 컬렉션 - 읽기/쓰기 허용 (인증된 사용자)
    match /places/{placeId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == resource.data.reporterId;
      allow delete: if false; // 삭제는 관리자만 가능
    }
    
    // 제로식당 캐시 컬렉션 - 읽기만 허용 (인증된 사용자)
    match /zero_restaurants_cache/{document} {
      allow read: if request.auth != null;
      allow write: if false; // 클라이언트에서 직접 쓰기 금지
    }
    
    // 사용자 데이터 - 본인만 접근 가능
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 기본 규칙 - 모든 접근 거부
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
